{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"noImplicitAny": false,
		"baseUrl": "./src/",
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"],
			"@/components/*": ["components/*"],
			"@/ui/*": ["components/ui/*"],

			"@/screens/*": ["components/screens/*"],
			"@/hooks": ["hooks/*"],
			"@/assets": ["assets/*"],
			"@/config": ["config/*"],
			"@/store": ["sto re/*"],
			"@/utils": ["utils/*"],
			"@/shared": ["shared/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
